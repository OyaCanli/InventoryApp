<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <View
        android:id="@+id/viewForTransactionType"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_standard"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_transaction_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginTop="8dp"
        tools:text="title"
        app:layout_constraintStart_toEndOf="@+id/viewForTransactionType"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_transaction_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginTop="8dp"
        tools:text="date"
        app:layout_constraintStart_toEndOf="@+id/viewForTransactionType"
        app:layout_constraintTop_toBottomOf="@+id/list_item_transaction_title" />
</android.support.constraint.ConstraintLayout>